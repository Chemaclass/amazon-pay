{% extends model('component') %}

{% define config = {
    name: 'shipment-method',
    tag: 'shipment-method'
} %}

{% define data = {
    quoteTransfer: required
} %}

{#{% define attributes = {#}
    {#'attribute': required#}
{#} %}#}

{% block body %}
    <h5 class="float-right __secondary">{{ app['cart.quantity'] }} {{ 'checkout.step.summary.items' | trans }}</h5>
    <h5>{{ 'checkout.step.summary.overview' | trans }}</h5>
    <ul class="no-bullet">
        <li>
            {{ 'checkout.step.summary.sub_total' | trans }}
            <span class="float-right">{{ data.quoteTransfer.totals.subtotal | money }}</span>
        </li>
        <li><hr></li>

        {% if data.quoteTransfer.shipment and data.quoteTransfer.shipment.method %}
            <li><strong>{{ 'checkout.step.summary.shipping' | trans }}</strong></li>
            <li>
                {% if data.quoteTransfer.shipment.method.name is not empty %}
                    {{ data.quoteTransfer.shipment.method.name }}
                {% endif %}
                {% if data.quoteTransfer.shipment.method.storeCurrencyPrice is not null %}
                    {{ data.quoteTransfer.shipment.method.storeCurrencyPrice | money }}
                {% endif %}
            </li>
        {% endif %}
        <li><hr></li>

        <h1>TO FIX { % include '@checkout/checkout/partials/summary-discounts.twig' % }</h1>

        <li class="clearfix">
            <h5 class="float-left">{{ 'checkout.step.summary.grand_total' | trans }}</h5>
            <h5 class="float-right"><strong>{{ data.quoteTransfer.totals.grandtotal | money }}</strong></h5>
        </li>
        <li>
            {{ 'checkout.step.summary.tax' | trans }}
            <span class="float-right">{{ data.quoteTransfer.totals.taxtotal.amount | money }}</span>
        </li>
    </ul>
{% endblock %}
